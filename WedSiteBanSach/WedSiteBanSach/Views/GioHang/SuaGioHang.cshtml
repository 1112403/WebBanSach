@using WedSiteBanSach.Models
@model List<GioHang>

@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}

<style>
    #divMenuLeft {
        display: none;
    }

    #divGioHang {
        margin-left: 50px;
    }

    table, th, td {
        border: solid 1px;
        padding: 7px;
    }
</style>

<h2 style="text-align:center">Giỏ hàng</h2>
<div id="divGioHang">
    <table style="">
        <tr>
            <th>Mã sách</th>
            <th>Tên sách</th>
            <th>Ảnh bìa</th>
            <th>Đơn giá</th>
            <th>Số lượng</th>
            <th>Tiền</th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                @using (@Html.BeginForm("CapNhatGioHang", "GioHang", new { @iMaSach = item.iMaSach }))
                {
                    <td>@item.iMaSach</td>
                    <td>@item.sTenSach</td>
                    <td><img src="@Url.Content("~/HinhAnhSP/" + item.sAnhBia)" width="50" height="50" /> </td>
                    <td>@item.dDonGia</td>
                    <td>@Html.TextBox("txtSoLuong", item.iSoLuong)</td>
                    <td>@item.dThanhTien</td>
                    <td>
                        <input type="submit" value="Cập nhật" />
                    </td>
                    <td>
                        @Html.ActionLink("Xóa", "XoaGioHang",  new { @iMaSach = item.iMaSach})
                    </td>
                }
            </tr>
        }
    </table>
</div>
